<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/AppCardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bob.gank_client.ui.widget.AutoImageView
            android:id="@+id/iv_meizi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/girl"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rl_gank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/main_fragment_item_title"
                android:textStyle="bold"
                android:text="text"
                android:textColor="@color/colorPrimaryText"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/main_fragment_cardview_margin"
                android:textSize="@dimen/main_fragment_item_author"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:text="text" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

